# Environment variables for Wan Local Suite
WAN_BACKEND_HOST=127.0.0.1
WAN_BACKEND_PORT=8000
WAN_CHECKPOINT_DIR=models/Wan2.2-Animate-14B
WAN_ENABLE_SEQUENCE_PARALLEL=false 
WAN_ENABLE_FSDP=false 
WAN_USE_RELIGHTING_LORA=false 
WAN_INIT_ON_CPU=true
WAN_DEFAULT_OFFLOAD_MODEL=true
WAN_DEFAULT_CLIP_LEN=53
WAN_DEFAULT_SAMPLING_STEPS=12 
WAN_DEFAULT_SAMPLE_SOLVER=unipc    
WAN_DEFAULT_GUIDE_SCALE=1.0
WAN_DEFAULT_SHIFT=5.0

# Uncomment to enable DF11-compressed WanAnimate weights (requires dfloat11 package and converted checkpoints)
WAN_USE_DFLOAT11=true
WAN_DFLOAT11_LOCAL_DIR=models/Wan2.2-Animate-14B-DF11
WAN_DFLOAT11_CPU_OFFLOAD=false
WAN_DFLOAT11_PIN_MEMORY=true
WAN_DFLOAT11_MAX_MEMORY={"cuda:0":"20GiB","cuda:1":"20GiB"}

