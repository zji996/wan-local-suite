# Copy this file to .env and adjust values as needed.
# Strings are literal; booleans accept true/false/1/0, integers as plain numbers.

# Frontend/backend coordination
WAN_BACKEND_HOST=127.0.0.1
WAN_BACKEND_PORT=8000

# Model weight discovery
# Set to the extracted Wan2.2-Animate checkpoint root to skip ModelScope downloads.
WAN_CHECKPOINT_DIR=
# Base directory for ModelScope snapshots when auto-download is enabled.
WAN_MODELS_ROOT=models
# Override the default ModelScope model id or revision when needed.
WAN_MODEL_ID=Wan-AI/Wan2.2-Animate-14B
WAN_MODEL_REVISION=

# Job and output storage
WAN_JOBS_ROOT=data/jobs

# Default generation hyperparameters (fallback when request omits a field)
WAN_DEFAULT_SAMPLE_SOLVER=dpm++
WAN_DEFAULT_SAMPLING_STEPS=20
WAN_DEFAULT_CLIP_LEN=77
WAN_DEFAULT_REFERT_NUM=1
WAN_DEFAULT_SHIFT=5.0
WAN_DEFAULT_GUIDE_SCALE=1.0
WAN_DEFAULT_SEED=-1
WAN_DEFAULT_OFFLOAD_MODEL=true
WAN_DEFAULT_FPS=30

# Runtime toggles
WAN_ENABLE_SEQUENCE_PARALLEL=
WAN_ENABLE_FSDP=false
WAN_USE_RELIGHTING_LORA=false
WAN_INIT_ON_CPU=true
WAN_DEVICE_ID=0

# Advanced configuration (usually keep defaults)
WAN_CONFIG_MODULE=third_party.wan2.2.wan.configs.wan_animate_14B
WAN_CONFIG_ATTR=animate_14B
